{
  "compilerOptions": {
    "outDir": "build",
    "lib": [ "es6", "dom" ],
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "include": [
    "src/Main.ts",
    "src/Library/AST.ts",
    "src/Library/IO.ts",
  ]
}
